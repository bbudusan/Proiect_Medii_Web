@page
@model Proiect_Medii.Pages.Producers.IndexModel

@{
    ViewData["Title"] = "Producers";
}

<h1>Producers</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a class="btn btn-outline-primary float-right" asp-page="Create">Create New</a>
    </p>
}
<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>
                        @Html.DisplayNameFor(model => model.Producer[0].ProfilePictureURL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Producer[0].FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Producer[0].Bio)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Producer)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>
                        <td style="white-space:nowrap" class="align-middle">
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="btn btn-outline-primary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                                <a> | </a>
                                <a class="btn btn-danger text-white" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                                <a> | </a>

                            }
                            <a class="btn btn-outline-info" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>